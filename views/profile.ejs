<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>My Profile</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>My Profile</h1>
        <a href="/meals" class="btn btn-default btn-sm">Meals</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
        <div>
            <div class="well">
                    <img src="<%=user.pic%>" width="200" height="200" alt=""><br>
                    <h3 class="text-primary"><%= user.name %></h3>
                    <strong>email</strong>: <%= user.email %>
            </div>
        </div>
        <hr>
        <div>
            <div class="well">
                    <h3 class="text-primary">My Meal Events</h3>
                    <p>
                        <% for(var i=0; i < meals.length; i++) { %>
                            - <a href="/meals/<%= meals[i].mid %>">Eat <strong><%= meals[i].foodname %></strong> at <%= meals[i].city %>, <%= meals[i].country %> on <%= meals[i].starttime %></a><br>
                        <% } %>
                    </p>
            </div>
        </div>
    </div>

</div>
</body>
</html>